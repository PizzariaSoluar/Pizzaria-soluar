function mostrarSabores(){
    let tamanho = document.getElementById("tamanhoPizza").value;
    let divSabores = document.getElementById("sabores");
    let sabor1 = document.getElementById("sabor1");
    let sabor2 = document.getElementById("sabor2");

    sabor1.innerHTML = "";
    sabor2.innerHTML = "";

    if(tamanho){
        listaSabores.forEach(s => {
            let opt1 = document.createElement("option");
            opt1.textContent = s;
            let opt2 = document.createElement("option");
            opt2.textContent = s;
            sabor1.appendChild(opt1);
            sabor2.appendChild(opt2);
        });
        divSabores.style.display = "block";
    } else {
        divSabores.style.display = "none";
    }
}

document.getElementById("btnWhats").addEventListener("click", function(){
    let tamanho = document.getElementById("tamanhoPizza").value;
    let sabor1 = document.getElementById("sabor1").value;
    let sabor2 = document.getElementById("sabor2").value;
    let borda = document.getElementById("borda").value;
    let ingredientes = document.getElementById("ingredientes").value;

    let mensagem = `Ol√°! Quero pedir uma pizza:\nTamanho: ${tamanho}\nSabor 1: ${sabor1}\nSabor 2: ${sabor2 || "Nenhum"}\nBorda: ${borda}\nObs: ${ingredientes}`;
    this.href = `https://wa.me/5533999342180?text=${encodeURIComponent(mensagem)}`;
});
